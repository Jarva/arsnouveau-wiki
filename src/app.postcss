html,
body {
    @apply h-screen overflow-hidden;
}

.dark p {
    color: rgb(var(--color-surface-300) / var(--tw-text-opacity));
}

.craftingRecipe {
    @apply flex flex-col lg:flex-row items-center justify-around mt-3
}

.craftingGridItem {
    @media (min-width: 1024px) {
        width: 130px;
        height: 130px;
    }
    width: 90px;
    height: 90px;
}

.craftingGridPicture {
    @media (min-width: 1024px) {
        width: 75px;
        height: 75px;
    }
    width: 50px;
    height: 50px;
}