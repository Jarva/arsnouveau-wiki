html,
body {
	@apply h-screen overflow-hidden;
}

.dark p {
       color: rgb(var(--color-surface-300) / var(--tw-text-opacity));
}

.craftingGridItem {
    @media (min-width: 1024px) {
        width: 130px;
        height: 130px;
    }
    width: 90px;
    height: 90px;
}

.craftingGridPicture {
    @media (min-width: 1024px) {
        width: 75px;
        height: 75px;
    }
    width: 50px;
    height: 50px;
}